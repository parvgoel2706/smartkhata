<%layout("./user/home.ejs")%>
<div class="form">
  <h3 class="mb-3 mt-5 col-6 offset-5 text-center">SignUp</h3>

  <div class="col-6 offset-5 text-center">
    <ul class="nav nav-tabs col-6 offset-3">
      <li class="nav-item col-6">
        <a class="nav-link active bg-primary text-warning" href="/signup"
          >Signup</a
        >
      </li>
      <li class="nav-item col-6">
        <a class="nav-link bg-dark-subtle" href="/login">Login</a>
      </li>
    </ul>

    <form
      action="/signup"
      method="POST"
      novalidate
      class="needs-validation mt-3"
    >
      <table>
        <tr>
          <td><label for="name" class="form-label">Name:</label></td>
          <td>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="enter your name"
              required
            />
            <div class="invalid-feedback">Name can't be null</div>
          </td>
        </tr>
        <tr>
          <td><label for="birthDate" class="form-label">DOB:</label></td>
          <td>
            <input
              type="date"
              id="birthDate"
              name="birthDate"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Required field</div>
          </td>
        </tr>
        <tr>
          <td>
            <label for="username" class="form-label">username:</label>
          </td>
          <td>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              placeholder="create a username"
              required
            />
            <div class="invalid-feedback">Required field</div>
          </td>
        </tr>
        <tr>
          <td><label for="password" class="form-label">Password:</label></td>
          <td>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="create a password"
              required
            />
            <div class="invalid-feedback">Required field</div>
          </td>
        </tr>
      </table>
      <button class="btn btn-warning mt-3">Signup</button>
    </form>
  </div>
</div>
